<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="clr-namespace:FormsBuilder"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FormsBuilder.EditorCanvasView">
  <ZoomBorder Name="ZoomBorder1"
              Stretch="None"
              ZoomSpeed="1.5"
              EnableConstrains="False"
              Background="LightGray" ClipToBounds="True" Focusable="True"
              VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
              PanButton="Middle">
    <Panel>
      <Panel Name="RootPanel"
             Background="Transparent"
             IsHitTestVisible="False">
      </Panel>
      <c:GridLinesControl Name="GridLines"
                          CellWidth="12"
                          CellHeight="12"
                          BoldSeparatorHorizontalSpacing="4"
                          BoldSeparatorVerticalSpacing="4"
                          IsGridEnabled="True"
                          IsHitTestVisible="False" />
    </Panel>
  </ZoomBorder>
</UserControl>
