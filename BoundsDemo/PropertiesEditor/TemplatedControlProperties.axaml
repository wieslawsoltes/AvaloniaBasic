<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BoundsDemo.TemplatedControlProperties">

  <!-- TemplatedControl -->
  <StackPanel Grid.IsSharedSizeScope="True">

    <TextBlock Text="Background" Margin="12" />

    <!-- Background -->
    <TextBox Name="TextBoxBackground" BorderBrush="Transparent"
             TextChanged="TextBoxBackground_OnTextChanged"
             Margin="6,0,6,0">
      <TextBox.InnerLeftContent>
        <Button Background="Transparent"
                ToolTip.Tip="Min/Max Width">
          <Button.Flyout>
            <Flyout ShowMode="TransientWithDismissOnPointerMoveAway">
              <Panel Width="350">
                <ColorView Name="BackgroundColorView" 
                           SelectedIndex="2"
                           ColorChanged="BackgroundColorView_OnColorChanged"/>
              </Panel>
            </Flyout>
          </Button.Flyout>
          <Rectangle Name="RectangleBackground"
                     Width="16" Height="16"
                     Margin="6,0,6,0"
                     Fill="Transparent">
          </Rectangle>
        </Button>
      </TextBox.InnerLeftContent>
      <TextBox.InnerRightContent>
        <TextBox Text="100%"
                 BorderBrush="Transparent"/>
      </TextBox.InnerRightContent>
    </TextBox>

    <TextBlock Text="Foreground" Margin="12" />

    <!-- Foreground -->
    <TextBox Name="TextBoxForeground" BorderBrush="Transparent"
             TextChanged="TextBoxForeground_OnTextChanged"
             Margin="6,0,6,0">
      <TextBox.InnerLeftContent>
        <Button Background="Transparent"
                ToolTip.Tip="Min/Max Width">
          <Button.Flyout>
            <Flyout ShowMode="TransientWithDismissOnPointerMoveAway">
              <Panel Width="350">
                <ColorView Name="ForegroundColorView" 
                           SelectedIndex="2"
                           ColorChanged="ForegroundColorView_OnColorChanged"/>
              </Panel>
            </Flyout>
          </Button.Flyout>
          <Rectangle Name="RectangleForeground"
                     Width="16" Height="16"
                     Margin="6,0,6,0"
                     Fill="Transparent">
          </Rectangle>
        </Button>
      </TextBox.InnerLeftContent>
      <TextBox.InnerRightContent>
        <TextBox Text="100%"
                 BorderBrush="Transparent"/>
      </TextBox.InnerRightContent>
    </TextBox>

  </StackPanel>

</UserControl>

